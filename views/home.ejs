<html>
<head>
  <meta charset="utf-8">
  <title>NIDS</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400|Ubuntu" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" crossorigin="anonymous">

  <style>
    :root {
      --primary: #00ADB5;
      --accent: #393E46;
      --muted: #EEEEEE;
    }

    body {
      font-family: 'Montserrat', 'Ubuntu', sans-serif;
      background: var(--muted);
      color: var(--accent);
      margin: 0; padding:0;
    }

    /* Navbar */
    .navbar {
      background: linear-gradient(90deg, #393E46 70%, #00ADB5 100%)!important;
      box-shadow: 0 2px 16px rgba(57,62,70,0.08);
      padding: 1rem 2rem;
    }
    .navbar-brand {
      font-weight: bold; letter-spacing:2px;
      font-size: 1.7rem;
      color: #fff !important;
    }
    .navbar-nav .nav-link {
      color: #EEE !important;
      margin-right: 1.2rem;
      transition: color 0.2s;
      font-weight: 500;
    }
    .navbar-nav .nav-link.active, .navbar-nav .nav-link:hover {
      color: var(--primary) !important;
    }

    /* Hero section */
    #title.colored-section {
      background: linear-gradient(105deg, #393E46 50%, #00ADB5 100%);
      color: #FFF;
      min-height: 530px;
      padding-top: 70px;
      padding-bottom: 40px;
      position: relative;
      overflow: hidden;
    }
    .big-heading {
      font-size: 2.7rem;
      font-weight: 700; 
      line-height: 1.25;
      letter-spacing: 1px;
      margin-bottom: 2rem;
      animation: fadeInDown 1.3s cubic-bezier(.3,.7,.4,1) 0.2s both;
    }
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-50px);}
      to   { opacity: 1; transform: none;}
    }
    .download-button {
      margin-right: 1.1em; 
      margin-bottom: 0.6em;
      border-radius: 28px;
      font-size: 1.1rem;
      transition: box-shadow .18s, transform .15s, background .21s;
      box-shadow: 0 3px 16px rgba(57,62,70,0.10);
      font-weight: 600;
    }
    .download-button:hover, .download-button:focus {
      box-shadow: 0 9px 24px rgba(0,173,181,0.14);
      transform: translateY(-2px) scale(1.04);
    }
    /* Optional: animated SVG background */
    .hero-art {
      width: 100%; max-width: 413px;
      position: absolute; right: 25px; top: 30px;
      z-index: 2;
      opacity: 0.95;
      animation: fadeInRight 1.5s 0.5s both;
    }
    @keyframes fadeInRight {
      from { opacity: 0; transform: translateX(50px);}
      to   { opacity: 1; transform: none;}
    }

    /* Features section */
    #features {
      padding: 58px 0px 47px 0px;
      background: #FFF;
    }
    .feature-box {
      text-align: center;
      padding: 42px 26px 32px 26px;
      background: #f7fafb;
      box-shadow: 0 3px 18px -8px #aad7da4a;
      border-radius: 18px;
      margin-bottom: 36px;
      opacity: 0.94;
      transition: transform .2s, box-shadow .19s;
    }
    .feature-box:hover {
      transform: translateY(-5px) scale(1.025) rotate(-2deg);
      box-shadow: 0 14px 44px -8px #00adb540;
      background: #e7fcfe;
    }
    .icon {
      color: var(--primary);
      margin-bottom: 20px;
      transition: color .14s,transform 0.16s;
    }
    .feature-box:hover .icon {
      color: #222;
      transform: scale(1.06) rotate(1deg);
    }
    .feature-title {
      font-weight: 700;
      font-size: 1.25rem;
      margin-bottom: 8px;
    }
    .feature-desc {
      font-size: 1.04rem;
      color: #444;
    }

    /* Attack/testimonials */
    #testimonials {
      background: linear-gradient(110deg,#00adb5, #393E46 100%);
      padding: 0px 0 40px 0;
    }
    #testimonial-carousel .card {
      box-shadow: 0px 18px 32px -10px rgba(0,173,181,0.15);
      border-radius: 18px;
      border: none;
      margin-top: 32px;
      background: #e4f5f8;
      max-width: 570px;
      margin-left:auto; margin-right:auto;
    }
    #testimonial-carousel .card-title {
      font-size: 1.45rem;
      color: var(--accent);
      font-weight: 700;
      margin-bottom: 10px;
      letter-spacing:1px;
    }
    #testimonial-carousel .card-text {
      color: #2d3a41;
      font-size: 1.08rem;
      opacity: 0.98;
    }
    .carousel-control-next-icon, .carousel-control-prev-icon {
      background-color: #00adb5; border-radius: 100px;
    }
    /* Dots (optional for carousel) */
    .carousel-indicators li {
      background-color: #00adb5;
    }
    /* Responsive tweaks */
    @media (max-width: 991px) {
      .big-heading { font-size: 2.1rem; }
      .hero-art { display:none; }
    }
    @media (max-width: 767px) {
      #title, #testimonials { padding: 48px 0 38px 0;}
      .navbar { padding:10px 1rem;}
      .feature-box { margin-bottom:28px;}
    }
  </style>

</head>

<!-- FEATURES SECTION -->
<section class="white-section" id="features">
  <div class="container">
    <div class="row" style="color: #393E46;">
      <!-- Feature 1 -->
      <div class="feature-box col-lg-4">
        <i class="icon fas fa-network-wired fa-4x"></i>
        <h3 class="feature-title">Network <br> Processing</h3>
        <p class="feature-desc">Transform live traffic into unique network signature patterns.</p>
      </div>
      <!-- Feature 2 -->
      <div class="feature-box col-lg-4">
        <i class="icon fas fa-shield-alt fa-4x"></i>
        <h3 class="feature-title">Prevent System</h3>
        <p class="feature-desc">Active defense responses on detecting threats.</p>
      </div>
      <!-- Feature 3 -->
      <div class="feature-box col-lg-4">
        <i class="icon fas fa-bug fa-4x"></i>
        <h3 class="feature-title">Threat Reporting</h3>
        <p class="feature-desc">Comprehensive threat event logging and visualization.</p>
      </div>
      <!-- Feature 4 -->
      <div class="feature-box col-lg-4">
        <i class="icon fas fa-filter fa-4x"></i>
        <h3 class="feature-title">Threat Classification</h3>
        <p class="feature-desc">Classifies each incident by advanced signature-based analysis.</p>
      </div>
      <!-- Feature 5 -->
      <div class="feature-box col-lg-4">

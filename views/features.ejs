  <style>
    :root {
      --primary: #00ADB5;
      --accent: #393E46;
      --muted: #EEEEEE;
    }
    body {
      font-family: 'Montserrat', 'Ubuntu', sans-serif;
      background: var(--muted);
      color: var(--accent);
      margin: 0; padding:0;
    }
    .navbar {
      background: linear-gradient(90deg, #393E46 70%, #00ADB5 100%)!important;
      box-shadow: 0 2px 16px rgba(57,62,70,0.08);
      padding: 1rem 2rem;
    }
    .navbar-brand {
      font-weight: bold; letter-spacing:2px;
      font-size: 1.7rem;
      color: #fff !important;
    }
    .navbar-nav .nav-link {
      color: #EEE !important;
      margin-right: 1.2rem;
      transition: color 0.2s;
      font-weight: 500;
    }
    .navbar-nav .nav-link.active, .navbar-nav .nav-link:hover {
      color: var(--primary) !important;
    }
    .features-section {
      padding: 60px 0 40px 0;
      background: #fff;
    }
    .features-title {
      text-align: center;
      margin-bottom: 48px;
      font-weight: 700;
      font-size: 2.7rem;
      color: #00ADB5;
      letter-spacing: 1px;
      text-shadow: 0 2px 8px #00adb543;
    }
    .feature-box {
      text-align: center;
      padding: 42px 26px 32px 26px;
      background: #f7fafb;
      box-shadow: 0 3px 18px -8px #aad7da4a;
      border-radius: 18px;
      margin-bottom: 36px;
      opacity: 0.94;
      transition: transform .2s, box-shadow .19s;
    }
    .feature-box:hover {
      transform: translateY(-5px) scale(1.025) rotate(-2deg);
      box-shadow: 0 14px 44px -8px #00adb540;
      background: #e7fcfe;
    }
    .icon {
      color: var(--primary);
      margin-bottom: 20px;
      transition: color .14s,transform 0.16s;
    }
    .feature-box:hover .icon {
      color: #222;
      transform: scale(1.06) rotate(1deg);
    }
    .feature-title {
      font-weight: 700;
      font-size: 1.25rem;
      margin-bottom: 8px;
      color: #393E46;
    }
    .feature-desc {
      font-size: 1.04rem;
      color: #444;
    }
    @media (max-width: 991px) {
      .features-title { font-size: 2.1rem; }
      .feature-box { margin-bottom:28px;}
    }
    @media (max-width: 576px) {
      .features-title { font-size: 1.3rem; }
      .feature-title { font-size: 1.1rem; }
      .feature-desc { font-size: 0.95rem; }
    }
  </style>
</head>
